#include <stdio.h>
int main()
{
   double rad, area, cir;
    printf("Input the radius of the circle\n");
    scanf("%lf", &rad);
    area = 3.14*rad*rad;
    cir = 2*3.14*rad;
    printf("The area of the circle is %lf\n", area);
    printf("The circumference of the circle is %lf", cir);
    return 0;
}
